<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFramework>net7.0</TargetFramework>
        <ImplicitUsings>enable</ImplicitUsings>
        <Nullable>enable</Nullable>
    </PropertyGroup>

    <PropertyGroup>
        <PackageId>Nox.Localization.SqlServer</PackageId>
        <Authors>The Nox Factory</Authors>
        <Description>Nox localization SqlServer implmentaion library</Description>
        <PackageRequireLicenseAcceptance>false</PackageRequireLicenseAcceptance>
        <Copyright>Copyright (c) Andre Sharpe 2023</Copyright>
        <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
        <PackageLicenseExpression>MIT</PackageLicenseExpression>
        <PackageProjectUrl>https://github.com/NoxOrg/Nox</PackageProjectUrl>
        <RepositoryUrl>https://github.com/NoxOrg/Nox.Solution.git</RepositoryUrl>
        <RepositoryType>git</RepositoryType>
        <PackageIcon>nox.png</PackageIcon>
    </PropertyGroup>

    <ItemGroup>
        <None Include="..\..\images\nox.png" Pack="true" PackagePath="" />
    </ItemGroup>

    <ItemGroup>
        <PackageReference Include="Microsoft.EntityFrameworkCore.Design" Version="7.0.10">
            <PrivateAssets>all</PrivateAssets>
            <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
        </PackageReference>
        <PackageReference Include="Microsoft.EntityFrameworkCore.SqlServer" Version="7.0.10" />
    </ItemGroup>

    <ItemGroup>
      <Folder Include="Migrations\" />
    </ItemGroup>

    <ItemGroup>
      <ProjectReference Include="..\Nox.EntityFramework.SqlServer\Nox.EntityFramework.SqlServer.csproj" />
      <ProjectReference Include="..\Nox.Localization\Nox.Localization.csproj" />
    </ItemGroup>

    <ItemGroup>
      <ProjectReference Include="..\Nox.Localization\Nox.Localization.csproj" />
    </ItemGroup>

</Project>
