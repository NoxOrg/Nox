@namespace Nox.Ui.Blazor.Lib.Components.NoxTypes
@using MudBlazor

<MudGrid>
    <MudItem xs="6">
        <MudNumericField Label="@Title"
                         Variant="Variant.Outlined"
                         Clearable="true"
                         Required="@Required"
                         Disabled="@Disabled"
                         HideSpinButtons="@HideSpinButtons"
                         RequiredError="@ErrorRequiredMessage(Title)"
                         TextChanged="OnLatitudeChanged"
                         Format="@Format"
                         Value="CurrentLatitude" />
    </MudItem>
    <MudItem xs="6">
        <MudNumericField Label="@TitleLongitude"
                         Variant="Variant.Outlined"
                         Clearable="true"
                         Required="@Required"
                         Disabled="@Disabled"
                         HideSpinButtons="@HideSpinButtons"
                         RequiredError="@ErrorRequiredMessage(TitleLongitude)"
                         TextChanged="OnLongitudeChanged"
                         Format="@Format"
                         Value="CurrentLongitude" />
    </MudItem>
</MudGrid>