@namespace Nox.Ui.Blazor.Lib.Components.NoxTypes
@using MudBlazor

<MudNumericField Label="@Title"
                 Variant="Variant.Outlined"
                 FullWidth="true"
                 Clearable="true"
                 Disabled="@Disabled"
                 Required="@Required"
                 RequiredError="@string.Format(@Resources.Resources.FieldIsRequired, @Title)"
                 Format="@Format"
                 TextChanged="OnAreaChanged"
                 Adornment="Adornment.End"
                 AdornmentIcon="@GetAdornmentIcon()"
                 Min="0"
                 Value="Area" />