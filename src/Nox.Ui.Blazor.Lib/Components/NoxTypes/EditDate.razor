@namespace Nox.Ui.Blazor.Lib.Components.NoxTypes
@using MudBlazor

<MudDatePicker Label="@Title"
               Variant="Variant.Outlined"
               Required="@Required"
               Disabled="@Disabled"
               RequiredError="@ErrorRequiredMessage(Title)"
               TextChanged="OnDateChanged"
               Editable="true"
               Placeholder="DisplayPlaceholder"
               DateFormat="@Format"
               Date="@Date">
</MudDatePicker>