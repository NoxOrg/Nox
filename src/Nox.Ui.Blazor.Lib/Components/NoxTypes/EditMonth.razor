@namespace Nox.Ui.Blazor.Lib.Components.NoxTypes
@using MudBlazor

@if (MonthSelectionList != null && MonthSelectionList.Count > 0)
{
    <MudSelect Label="@Title"
               Variant="Variant.Outlined"
               FullWidth="true"
               Clearable="true"
               Required="true"
               Disabled="@Disabled"
               RequiredError="@ErrorRequiredMessage(Title)"
               TextChanged="OnMonthChanged"
               Value="@CurrentMonthStr"
               OnClearButtonClick="OnClear">
        @foreach (var item in MonthSelectionList)
        {
            <MudSelectItem Value="@item.Key.ToString()">@item.Value</MudSelectItem>
        }
    </MudSelect>
}