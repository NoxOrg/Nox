@namespace Nox.Ui.Blazor.Lib.Components.NoxTypes
@using MudBlazor
@typeparam T

<MudTextField InputType="InputType.Number"
              Label="@Title"
              Variant="Variant.Outlined"
              FullWidth="true"
              Clearable="true"
              Required="@Required"
              RequiredError="@ErrorRequiredMessage"              
              TextChanged="OnNumberChanged"
              Min="@Minimum"
              Max="@Maximum"
              @bind-Value="Number" />