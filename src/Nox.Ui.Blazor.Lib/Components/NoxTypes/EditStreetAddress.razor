@namespace Nox.Ui.Blazor.Lib.Components.NoxTypes
@using MudBlazor
@using Nox.Types
@using Nox.Ui.Blazor.Lib.Models

<MudGrid>
    <MudItem xs="6">
        <MudTextField Label="@Title"
                      Variant="Variant.Outlined"
                      Clearable="true"
                      Disabled="@Disabled"
                      TextChanged="OnStreetNumberChanged"
                      MaxLength="@MaxLengthStreetNumber"
                      Value="CurrentStreetNumber" />
    </MudItem>
    <MudItem xs="6">
        <MudTextField Label="@TitleAddressLine1"
                      Variant="Variant.Outlined"
                      Clearable="true"
                      Required="true"
                      Disabled="@Disabled"
                      RequiredError="@ErrorRequiredMessage(TitleAddressLine1)"
                      TextChanged="OnAddressLine1Changed"
                      MaxLength="@MaxLengthAddressLine1"
                      Value="CurrentAddressLine1" />
    </MudItem>
    <MudItem xs="6">
        <MudTextField Label="@TitleAddressLine2"
                      Variant="Variant.Outlined"
                      Clearable="true"
                      Disabled="@Disabled"
                      TextChanged="OnAddressLine2Changed"
                      MaxLength="@MaxLengthAddressLine2"
                      Value="CurrentAddressLine2" />
    </MudItem>
    <MudItem xs="6">
        <MudTextField Label="@TitleRoute"
                      Variant="Variant.Outlined"
                      Clearable="true"
                      Disabled="@Disabled"
                      TextChanged="OnRouteChanged"
                      MaxLength="@MaxLengthRoute"
                      Value="CurrentRoute" />
    </MudItem>
    <MudItem xs="6">
        <MudTextField Label="@TitleLocality"
                      Variant="Variant.Outlined"
                      Clearable="true"
                      Disabled="@Disabled"
                      TextChanged="OnLocalityChanged"
                      MaxLength="@MaxLengthLocality"
                      Value="CurrentLocality" />
    </MudItem>
    <MudItem xs="6">
        <MudTextField Label="@TitleNeighborhood"
                      Variant="Variant.Outlined"
                      Clearable="true"
                      Disabled="@Disabled"
                      TextChanged="OnNeighborhoodChanged"
                      MaxLength="@MaxLengthNeighborhood"
                      Value="CurrentNeighborhood" />
    </MudItem>
    <MudItem xs="6">
        <MudTextField Label="@TitleAdministrativeArea1"
                      Variant="Variant.Outlined"
                      Clearable="true"
                      Disabled="@Disabled"
                      TextChanged="OnAdministrativeArea1Changed"
                      MaxLength="@MaxLengthAdministrativeArea1"
                      Value="CurrentAdministrativeArea1" />
    </MudItem>
    <MudItem xs="6">
        <MudTextField Label="@TitleAdministrativeArea2"
                      Variant="Variant.Outlined"
                      Clearable="true"
                      Disabled="@Disabled"
                      TextChanged="OnAdministrativeArea2Changed"
                      MaxLength="@MaxLengthAdministrativeArea2"
                      Value="CurrentAdministrativeArea2" />
    </MudItem>
    <MudItem xs="6">
        <MudTextField Label="@TitlePostalCode"
                      Variant="Variant.Outlined"
                      Clearable="true"
                      Required="true"
                      Disabled="@Disabled"
                      RequiredError="@ErrorRequiredMessage(TitlePostalCode)"
                      TextChanged="OnPostalCodeChanged"
                      MaxLength="@MaxLengthPostalCode"
                      Value="CurrentPostalCode" />
    </MudItem>
    <MudItem xs="6">
        <MudSelect Label="@TitleCountryId"
                    Variant="Variant.Outlined"
                    Clearable="true"
                    Required="true"
                    Disabled="@Disabled"
                    RequiredError="@ErrorRequiredMessage(TitleCountryId)"
                    TextChanged="OnCountryIdChanged"
                   @bind-Value="CurrentCountryId">
            @foreach (var item in CountrySelectionList)
            {
                <MudSelectItem T="CountryCode?" Value="(CountryCode?)item" />
            }
        </MudSelect>
    </MudItem>
</MudGrid>