@using MudBlazor
@inherits UiEditMoney

<MudNumericField Label="@Title"
              Variant="Variant.Outlined"
              FullWidth="true"
              Clearable="true"
              Required="false"
              RequiredError="@ErrorRequiredMessage"              
              MaxLength="63"
              TextChanged="OnMoneyChanged"
              Min="0"
              Format="@Format"
              Adornment="Adornment.Start"
              AdornmentText="@DisplayCurrencySymbol"
              Disabled="IsDisabled"
              Value="Amount" />