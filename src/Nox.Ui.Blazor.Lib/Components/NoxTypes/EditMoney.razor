@namespace Nox.Ui.Blazor.Lib.Components.NoxTypes
@using MudBlazor

<MudItem xs=12>
    <MudGrid>
        <MudItem xs="6">
            <MudNumericField Label="@Title"
                             Variant="Variant.Outlined"
                             FullWidth="true"
                             Clearable="true"
                             Required="@Required"
                             Disabled="@Disabled"
                             HideSpinButtons="@HideSpinButtons"
                             RequiredError="@ErrorRequiredMessage"
                             Min="@MinValue"
                             Max="@MaxValue"
                             Format="@Format"
                             TextChanged="@OnAmountChanged"
                             @bind-Value="Money.Amount" />
        </MudItem>
        <MudItem xs="6">
            <MudSelect @bind-Value="@Money.CurrencyCode"
                       Label="@TitleCurrencyCode"
                       Required="@Required"
                       Variant="Variant.Outlined"
                       TextChanged="OnCurrencyCodeChanged">
                @foreach (var currency in CurrencyCodes)
                {
                    <MudSelectItem Value="@currency">@currency</MudSelectItem>
                }
            </MudSelect>
        </MudItem>
    </MudGrid>
</MudItem>
