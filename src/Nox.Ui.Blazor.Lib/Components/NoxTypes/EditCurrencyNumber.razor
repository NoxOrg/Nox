@namespace Nox.Ui.Blazor.Lib.Components.NoxTypes
@using Nox.Ui.Blazor.Lib.Models
@using MudBlazor

<MudSelect T="short?"
           Label="@Title"
           Variant="Variant.Outlined"
           FullWidth="true"
           Clearable="true"
           Required="@Required"
           RequiredError="@ErrorRequiredMessage"
           TextChanged="OnCurrencyNumberChanged"
           @bind-Value="CurrencyNumber">
    @foreach (var number in CurrencyNumbers)
    {
        <MudSelectItem T="short?" Value="(short?)number" />
    }
</MudSelect>