@using MudBlazor

@namespace Nox.Ui.Blazor.Lib.Components.Generic

@inherits ComponentBase

<MudButton OnClick="OnClicked"
           Variant="Variant.Filled"
           StartIcon="@StartIcon"
           Color="Color.Info">@Title</MudButton>

    @code {
    [Parameter]
    public EventCallback OnClick { get; set; }

    [Parameter]
    public string? Title { get; set; } = @Resources.Resources.Add.ToUpper();

    [Parameter]
    public string? StartIcon { get; set; } = @Icons.Material.Filled.Add;

    private async Task OnClicked()
    {
        await OnClick.InvokeAsync();
    }
}
