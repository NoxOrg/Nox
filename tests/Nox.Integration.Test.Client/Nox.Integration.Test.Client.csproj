<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<TargetFramework>net7.0</TargetFramework>
		<ImplicitUsings>enable</ImplicitUsings>
		<Nullable>enable</Nullable>
	</PropertyGroup>

	<PropertyGroup>
		<EmitCompilerGeneratedFiles>true</EmitCompilerGeneratedFiles>
		<CompilerGeneratedFilesOutputPath>Generated</CompilerGeneratedFilesOutputPath>
		<AssemblyName>Nox.Integration.Test.Client</AssemblyName>
		<RootNamespace>Nox.Integration.Test.Client</RootNamespace>
	</PropertyGroup>

	<ItemGroup>
		<ProjectReference Include="..\Nox.Lib.Tests\Nox.Lib.Tests.csproj" />	
		<ProjectReference Include="..\..\src\Nox.Generator\Nox.Generator.csproj" ReferenceOutputAssembly="false" OutputItemType="Analyzer" />	
	</ItemGroup>

	<ItemGroup>
		<Compile Remove="Generated\**" />
		<Content Include="Generated\**" />
	</ItemGroup>

	<Target Name="CleanSourceGeneratedFiles" BeforeTargets="BeforeBuild" DependsOnTargets="$(BeforeBuildDependsOn)">
		<RemoveDir Directories="Generated" />
	</Target>

	<ItemGroup>
		<None Remove="generator.nox.yaml" />
	</ItemGroup>

	<ItemGroup>
		<AdditionalFiles Include="generator.nox.yaml" />
	</ItemGroup>

	<ItemGroup>
		<AdditionalFiles Include=".nox\design\test.solution.nox.yaml" />
	</ItemGroup>

	<ItemGroup>
		<InternalsVisibleTo Include="Nox.Integration.Tests" />
	</ItemGroup>
	
</Project>
