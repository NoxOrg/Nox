@using Cryptocash.Ui.Generated.Component;
@inherits UiEditLatLongBase

<MudGrid>
    <MudItem xs="6">
        <MudNumericField Label="@TitleLatitude"
                         Variant="Variant.Outlined"
                         Clearable="true"
                         Required="true"
                         RequiredError="@ErrorRequiredMessage(TitleLatitude)"
                         TextChanged="OnLatitudeChanged"
                         Format="@Format"
                         Value="CurrentLatitude" />
    </MudItem>
    <MudItem xs="6">
        <MudNumericField Label="@TitleLongitude"
                         Variant="Variant.Outlined"
                         Clearable="true"
                         Required="true"
                         RequiredError="@ErrorRequiredMessage(TitleLongitude)"
                         TextChanged="OnLongitudeChanged"
                         Format="@Format"
                         Value="CurrentLongitude" />
    </MudItem>
</MudGrid>

@if (DisplayGoogleMap)
{
    <div style="margin-top:30px;">
        <UiEditGoogleMap_g LatLong="LatLong" LatLongChanged="OnLatLongChanged" />
    </div>
}
