@using Cryptocash.Ui.Generated.Component;
@using Application.Dto;
@inherits UiEditEntityExactlyOneLandLordBase

@if (LandLordSelectionList != null && LandLordSelectionList.Count > 0)
{
    <MudSelect Label="@Title"
               Variant="Variant.Outlined"
               FullWidth="true"
               Clearable="true"
               Required="true"
               RequiredError="@ErrorRequiredMessage(Title)"
               TextChanged="OnLandLordIdChanged"
               Value="@CurrentLandLordIdStr">
        @foreach (LandLordDto item in LandLordSelectionList)
        {
            <MudSelectItem Value="@item.Id.ToString()">@item.Name</MudSelectItem>
        }
    </MudSelect>
}