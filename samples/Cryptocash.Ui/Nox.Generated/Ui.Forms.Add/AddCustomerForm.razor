@namespace Cryptocash.Ui.Forms.Add

<MudDialog @bind-IsVisible="@IsVisible" Options="@AddDialogOptions">
    <TitleContent>
        <MudText Typo="Typo.h6">ADD Customer</MudText>
    </TitleContent>
    <DialogContent>
        <MudText>Add Dialog Content</MudText>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="@OnCancelClicked"
                   Variant="Variant.Outlined"
                   Color="Color.Info"
                   Style="Margin:15px;">CANCEL</MudButton>
        <MudButton OnClick="@OnSubmitClicked"
                   Variant="Variant.Filled"
                   Color="Color.Info"
                   Style="Margin:15px;">
            <MudText>SUBMIT</MudText>
        </MudButton>
    </DialogActions>
</MudDialog>