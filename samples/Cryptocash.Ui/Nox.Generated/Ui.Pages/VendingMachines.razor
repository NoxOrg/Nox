@using Nox.Ui.Blazor.Lib.Components.Generic
@using Nox.Ui.Blazor.Lib.Services
@using Cryptocash.Ui.Forms.Add
@using Cryptocash.Ui.DataGrid

@namespace Cryptocash.Ui.Pages

@page "/VendingMachines"

@inject ApplicationState AppState
@{
    AppState.PageTitle = "VendingMachines";
}

<MudText>VendingMachines</MudText>

<MudGrid Spacing="0">
    <MudItem xs="12">
        <MudText>Search section</MudText>
    </MudItem>
    <MudItem xs="12">
        <Actions OnClick="ShowAddDialog" />
    </MudItem>
    <AddVendingMachineForm @bind-IsVisible="showAddDialog" OnSubmit="AddVendingMachineSubmit" OnCancel="HideAddDialog" />
    <MudItem xs="12">
        <VendingMachinesDataGrid @ref="referencedDataGrid" />
    </MudItem>
</MudGrid>

@code{
#region ADD
    private bool showAddDialog = false;
    private VendingMachinesDataGrid? referencedDataGrid;

    private void ShowAddDialog()
    {
        showAddDialog = true;
    }

    private void HideAddDialog()
    {
        showAddDialog = false;
    }

    private void AddVendingMachineSubmit()
    {
        showAddDialog = false;        
        referencedDataGrid?.RefreshDataGrid();
    }
#endregion ADD
}