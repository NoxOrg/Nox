@using Nox.Ui.Blazor.Lib.Components.Generic
@using Nox.Ui.Blazor.Lib.Services
@using Cryptocash.Ui.Forms.Add
@using Cryptocash.Ui.DataGrid

@namespace Cryptocash.Ui.Pages

@page "/Currencies"

@inject ApplicationState AppState
@{
    AppState.PageTitle = "Currencies";
}

<MudText>Currencies</MudText>

<MudGrid Spacing="0">
    <MudItem xs="12">
        <MudText>Search section</MudText>
    </MudItem>
    <MudItem xs="12">
        <Actions OnClick="ShowAddDialog" />
    </MudItem>
    <AddCurrencyForm @bind-IsVisible="showAddDialog" OnSubmit="AddCurrencySubmit" OnCancel="HideAddDialog" />
    <MudItem xs="12">
        <CurrenciesDataGrid @ref="referencedDataGrid" />
    </MudItem>
</MudGrid>

@code{
#region ADD
    private bool showAddDialog = false;
    private CurrenciesDataGrid? referencedDataGrid;

    private void ShowAddDialog()
    {
        showAddDialog = true;
    }

    private void HideAddDialog()
    {
        showAddDialog = false;
    }

    private void AddCurrencySubmit()
    {
        showAddDialog = false;        
        referencedDataGrid?.RefreshDataGrid();
    }
#endregion ADD
}