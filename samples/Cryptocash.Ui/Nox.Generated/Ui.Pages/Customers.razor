@using Nox.Ui.Blazor.Lib.Components.Generic
@using Nox.Ui.Blazor.Lib.Services
@using Cryptocash.Ui.Forms.Add
@using Cryptocash.Ui.DataGrid

@namespace Cryptocash.Ui.Pages

@page "/Customers"

@inject ApplicationState AppState
@{
    AppState.PageTitle = "Customers";
}

<MudText>Customers</MudText>

<MudGrid Spacing="0">
    <MudItem xs="12">
        <MudText>Search section</MudText>
    </MudItem>
    <MudItem xs="12">
        <Actions OnAdd="ShowAddDialog" />
    </MudItem>
    <AddCustomerForm @bind-IsVisible="showAddDialog" OnSubmit="AddCustomerSubmit" OnCancel="HideAddDialog" />
    <MudItem xs="12">
        <CustomersDataGrid />
    </MudItem>
</MudGrid>

@code{
#region ADD
    private bool showAddDialog = false;

    private void ShowAddDialog()
    {
        showAddDialog = true;
    }

    private void HideAddDialog()
    {
        showAddDialog = false;
    }

    private void AddCustomerSubmit()
    {
        showAddDialog = false;
    }
#endregion ADD
}