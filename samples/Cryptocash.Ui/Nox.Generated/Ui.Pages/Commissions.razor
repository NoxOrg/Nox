@using Nox.Ui.Blazor.Lib.Components.Generic
@using Nox.Ui.Blazor.Lib.Services
@using Cryptocash.Ui.Forms.Add
@using Cryptocash.Ui.DataGrid

@namespace Cryptocash.Ui.Pages

@page "/Commissions"

@inject ApplicationState AppState
@{
    AppState.PageTitle = "Commissions";
}

<MudText>Commissions</MudText>

<MudGrid Spacing="0">
    <MudItem xs="12">
        <MudText>Search section</MudText>
    </MudItem>
    <MudItem xs="12">
        <Actions OnClick="ShowAddDialog" />
    </MudItem>
    <AddCommissionForm @bind-IsVisible="showAddDialog" OnSubmit="AddCommissionSubmit" OnCancel="HideAddDialog" />
    <MudItem xs="12">
        <CommissionsDataGrid @ref="referencedDataGrid" />
    </MudItem>
</MudGrid>

@code{
#region ADD
    private bool showAddDialog = false;
    private CommissionsDataGrid? referencedDataGrid;

    private void ShowAddDialog()
    {
        showAddDialog = true;
    }

    private void HideAddDialog()
    {
        showAddDialog = false;
    }

    private void AddCommissionSubmit()
    {
        showAddDialog = false;        
        referencedDataGrid?.RefreshDataGrid();
    }
#endregion ADD
}