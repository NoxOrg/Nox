@using Nox.Ui.Blazor.Lib.Components.Generic
@using Nox.Ui.Blazor.Lib.Services
@using Cryptocash.Ui.Forms.Add
@using Cryptocash.Ui.DataGrid

@namespace Cryptocash.Ui.Pages

@page "/CashStockOrders"

@inject ApplicationState AppState
@{
    AppState.PageTitle = "CashStockOrders";
}

<MudText>CashStockOrders</MudText>

<MudGrid Spacing="0">
    <MudItem xs="12">
        <MudText>Search section</MudText>
    </MudItem>
    <MudItem xs="12">
        <Actions OnClick="ShowAddDialog" />
    </MudItem>
    <AddCashStockOrderForm @bind-IsVisible="showAddDialog" OnSubmit="AddCashStockOrderSubmit" OnCancel="HideAddDialog" />
    <MudItem xs="12">
        <CashStockOrdersDataGrid @ref="referencedDataGrid" />
    </MudItem>
</MudGrid>

@code{
#region ADD
    private bool showAddDialog = false;
    private CashStockOrdersDataGrid? referencedDataGrid;

    private void ShowAddDialog()
    {
        showAddDialog = true;
    }

    private void HideAddDialog()
    {
        showAddDialog = false;
    }

    private void AddCashStockOrderSubmit()
    {
        showAddDialog = false;        
        referencedDataGrid?.RefreshDataGrid();
    }
#endregion ADD
}